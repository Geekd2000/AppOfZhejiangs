<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNotWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorNotWhite"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/txt_city"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:drawableRight="@drawable/arrow_down"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="定位"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/main_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edit_search"
                android:drawableLeft="@drawable/main_search"
                android:drawablePadding="10dp"
                android:hint="@string/edit_scenic"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorNotWhite"
            android:padding="5dp"
            android:requiresFadingEdge="horizontal">

            <TextView
                android:id="@+id/txt_ticket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ticket"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="门票"
                android:textColor="@color/colorLightBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_hotel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/hotel"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="酒店"
                android:textColor="@color/colorLightBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_taxi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/taxi_logo"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="包租车"
                android:textColor="@color/colorLightBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_guider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/guider_logo"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="导游预约"
                android:textColor="@color/colorLightBlack"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorNotWhite"
            android:padding="5dp"
            android:requiresFadingEdge="horizontal">

            <TextView
                android:id="@+id/txt_nongjiale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/nongjiale"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="农家乐"
                android:textColor="@color/colorLightBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_food"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/food"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="美食"
                android:textColor="@color/colorLightBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_commodity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/commodity"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="特产购买"
                android:textColor="@color/colorLightBlack"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_mapmapmap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/mapmapmap"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="地图"
                android:textColor="@color/colorLightBlack"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_hotplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="热门景点"
            android:textColor="@color/colorBlack"
            android:textSize="28sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fg3_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_radius"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>