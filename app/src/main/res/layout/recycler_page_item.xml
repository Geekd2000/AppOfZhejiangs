<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/tourism_strategy_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/tourism_strategy_logo" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="2"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tourism_strategy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="快乐大酒店"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#000"
            android:paddingTop="2dp"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottomLayout"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tourism_strategy_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGreen"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="旅游攻略"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/tourism_strategy_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="2020-08-06"
                android:textSize="12dp"
                android:textColor="#aaa"/>

            <TextView
                android:id="@+id/hotel_locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tourism_strategy_time"
                android:text="更新"
                android:textSize="12dp"
                android:textColor="#aaa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tourism_strategy_count"
                android:text="浏览量："
                android:textSize="12dp"
                android:textColor="#aaa"/>

            <TextView
                android:id="@+id/tourism_strategy_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="4784"
                android:textSize="12dp"
                android:textColor="#aaa"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>